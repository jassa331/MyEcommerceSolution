        min-height: 140px;
        resize: vertical;
    }

    /* Checkbox */
    .product-form .form-check {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        padding: 0.5rem 0;
    }

    .product-form .form-check-input {

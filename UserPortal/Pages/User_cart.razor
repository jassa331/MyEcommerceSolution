@page "/user_cart"
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager NavManager

<h3 style="text-align:center; color:#222;">🛒 My Cart</h3>

@if (isLoading)
{
    <div style="text-align:center; margin-top:50px;">
        <p>Loading cart...</p>
        <div class="spinner"></div>
    </div>
}
else if (!cartItems.Any())
{
    <p style="text-align:center; margin-top:50px;">Your cart is empty.</p>
}
else
{
    <div class="cart-container">
        @foreach (var item in cartItems)
        {
            <div class="cart-card">
                <img src="@GetFullImageUrl(item.ImageUrl)" alt="@item.Name" class="cart-image" />
                <div class="cart-details">
                    <h4>@item.Name</h4>
                    <p class="desc">@item.Description</p>
                    <p><strong>Price:</strong> ₹@item.Price</p>
                    <p><strong>Quantity:</strong> @item.Quantity</p>
                    <a href="user_checkout" style="display: inline-block;
                                                   padding: 10px 20px;
                                                   background-color: #000;
                                                   color: #fff;
                                                   text-decoration: none;
                                                   border-radius: 5px;
                                                   text-align: center;
                                                   font-weight: bold;
                                                   ">Order Now</a>
                    <button @onclick="async () => await DeleteItem(item.CartItemID)"
                            disabled="@deletingItems.Contains(item.CartItemID)"
                            style="background-color: grey; color: #fff; border: none; padding: 8px 15px; border-radius: 5px; font-weight: bold; cursor: pointer; margin-top: 10px;">
                        🗑️ Delete
                    </button>



                </div>
            </div>
        }
    </div>
}

<style>
    /* Grid layout */
    .cart-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        padding: 20px;
    }

    .cart-card {
        background: #fff;
        border-radius: 10px;
        padding: 15px;
        display: flex;
        flex-direction: column;
        align-items: center;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .cart-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.15);
        }

    .cart-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 10px;
    }

    .cart-details {
        text-align: center;
    }

        .cart-details h4 {
            margin: 10px 0 5px;
            font-size: 18px;
            color: #222;
        }

        .cart-details .desc {
            font-size: 14px;
            color: #555;
            margin-bottom: 8px;
        }

        .cart-details p {
            margin: 4px 0;
            font-size: 15px;
        }

    /* Spinner */
    .spinner {
        border: 6px solid #f3f3f3;
        border-top: 6px solid #333;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        margin: 20px auto;
        animation: spin 1s linear infinite;
    }

</style>

@code {
    private List<CartItem> cartItems = new();
    private bool isLoading = true;
    private HashSet<Guid> deletingItems = new();

    private async Task DeleteItem(Guid cartItemId)
    {
        if (deletingItems.Contains(cartItemId))
            return;

        deletingItems.Add(cartItemId);

        var token = await JS.InvokeAsync<string>("localStorage.getItem", "authToken");
        if (string.IsNullOrEmpty(token))
        {
            NavManager.NavigateTo("/");
            return;
        }

        Http.DefaultRequestHeaders.Authorization =
            new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

        var response = await Http.DeleteAsync($"https://localhost:7117/api/Cart/Delete/{cartItemId}");
        if (response.IsSuccessStatusCode)
        {
            cartItems = cartItems.Where(c => c.CartItemID != cartItemId).ToList();
            StateHasChanged();
        }
        else
        {
            var err = await response.Content.ReadAsStringAsync();
            Console.WriteLine($"❌ Delete failed: {err}");
        }

        deletingItems.Remove(cartItemId);
    }


    protected override async Task OnInitializedAsync()
    {
        try
        {
            var token = await JS.InvokeAsync<string>("localStorage.getItem", "authToken");

            if (string.IsNullOrEmpty(token))
            {
                NavManager.NavigateTo("/");
                return;
            }

            // Attach JWT token
            Http.DefaultRequestHeaders.Authorization =
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

            var response = await Http.GetAsync("https://localhost:7117/api/Cart/GetByUser");

            if (response.IsSuccessStatusCode)
            {
                cartItems = await response.Content.ReadFromJsonAsync<List<CartItem>>() ?? new List<CartItem>();
            }
            else
            {
                var err = await response.Content.ReadAsStringAsync();
                if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized ||
                    err.Contains("User ID in token"))
                {
                    // Invalid/expired token → remove & redirect
                    await JS.InvokeVoidAsync("localStorage.removeItem", "authToken");
                    NavManager.NavigateTo("/");
                }
                else
                {
                    Console.WriteLine($"❌ API Error: {response.StatusCode} - {err}");
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error loading cart: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetFullImageUrl(string relativeUrl)
    {
        if (string.IsNullOrWhiteSpace(relativeUrl)) return "images/noimage.png";
        return relativeUrl.StartsWith("http") ? relativeUrl : $"https://localhost:7117/{relativeUrl.TrimStart('/')}";
    }

    public class CartItem
    {
        public Guid CartItemID { get; set; }
        public Guid Appuserid { get; set; }
        public string Name { get; set; } = "";
        public string Description { get; set; } = "";
        public decimal Price { get; set; }
        public int Quantity { get; set; }
        public string ImageUrl { get; set; } = "";
    }
}

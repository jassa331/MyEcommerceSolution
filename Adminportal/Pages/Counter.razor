@page "/counter"
@inject IJSRuntime JS
@inject HttpClient Http

<h2 style="text-align:center; color:black;">My Uploaded Products</h2>

<div class="counter-box">
</div>

@if (isLoading)
{
    <p class="center-text">Loading...</p>
}
else if (products == null || products.Count == 0)
{

    <p class="center-text">No products found.</p>
}
else
{

    <div class="content-box">
        <div class="table-container">
            <table class="modern-table">
                <thead> <tr> <th>Image</th> @* <th>Description</th> *@ <th>Price</th> <th>Category</th> @* <th>Stock</th> *@ <th>Action</th> </tr> </thead>

                ```
                <tbody>
                    @foreach (var p in products)
                    {
                        <tr>
                            <td>
                                <img src="@p.ImageUrl" class="prod-img" />
                            </td>
                           @*  <td>@p.Description</td> *@
                            <td>₹@p.Price</td>
                            <td>@p.Category</td>

                            <td>
                                <NavLink class="btn-edit btn btn-primary" href="@($"/update-product/{p.ProductID}")">
                                    Edit
                                </NavLink>
                                <button class="btn btn-danger"
                                        @onclick="() => DeleteProduct(p.ProductID)">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>


}

<!-- Edit Modal -->
@if (editingProduct != null)
{
    <div class="modal-backdrop">
        <div class="modal">
            <h3>Edit Product</h3> <label>Description:</label>
            <input type="text" @bind="editingProduct.Description" /> <label>Price:</label>
            <input type="number" step="0.01" @bind="editingProduct.Price" /> <label>Category:</label>
            <input type="text" @bind="editingProduct.Category" /> <label>In Stock:</label>
            <input type="checkbox" @bind="editingProduct.InStock" /> <div class="modal-actions">
                <button class="btn" @onclick="SaveProduct">Save</button>
                <button class="btn-danger" @onclick="CancelEdit">Cancel</button>
            </div>
        </div>
    </div>
}

@code {
    private List<ProductDto>? products;
    private bool isLoading = true;
    private int currentCount = 0;
    //jassadhammi

    private ProductUpdateDto? editingProduct = null;
    private Guid editingProductId;

    private void IncrementCount() => currentCount++;

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        try
        {
            var token = await JS.InvokeAsync<string>("localStorage.getItem", "authToken");
            if (string.IsNullOrEmpty(token)) { isLoading = false; return; }

            Http.DefaultRequestHeaders.Authorization =
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

            var response = await Http.GetAsync("https://localhost:7255/api/Product/my-products");

            if (response.IsSuccessStatusCode)
            {
                products = await response.Content.ReadFromJsonAsync<List<ProductDto>>();

                foreach (var p in products)
                {
                    if (!string.IsNullOrEmpty(p.ImageUrl))
                    {
                        if (!p.ImageUrl.StartsWith("http"))
                            p.ImageUrl = $"https://localhost:7255/{p.ImageUrl.Replace("\\", "/")}";
                    }
                    else
                    {
                        p.ImageUrl = "https://via.placeholder.com/80x80?text=No+Image";
                    }
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DeleteProduct(Guid id)
    {
        Console.WriteLine("Deleting product id: " + id);

        if (id == Guid.Empty)
        {
            await JS.InvokeVoidAsync("alert", "❌ Product ID is empty!");
            return;
        }

        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure?");
        if (!confirmed) return;

        var token = await JS.InvokeAsync<string>("localStorage.getItem", "authToken");

        Http.DefaultRequestHeaders.Authorization =
            new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

        var result = await Http.DeleteAsync($"https://localhost:7255/api/Product/delete/{id}");

        if (result.IsSuccessStatusCode)
        {
            await LoadProducts();
            await JS.InvokeVoidAsync("alert", "✅ Product deleted!");
        }
        else
        {
            var error = await result.Content.ReadAsStringAsync();
            await JS.InvokeVoidAsync("alert", $"❌ Delete failed: {error}");
        }
    }


    private void EditProduct(ProductDto product)
    {
        editingProductId = product.ProductID;
        editingProduct = new ProductUpdateDto
        {
            Name = product.Description,
            Description = product.Description,
            Price = product.Price,
            Category = product.Category,
            InStock = product.InStock
        };
    }

    private void CancelEdit()
    {
        editingProduct = null;
    }

    private async Task SaveProduct()
    {
        if (editingProduct == null) return;

        var token = await JS.InvokeAsync<string>("localStorage.getItem", "authToken");
        Http.DefaultRequestHeaders.Authorization =
            new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

        var response = await Http.PutAsJsonAsync($"https://localhost:7255/api/Product/update/{editingProductId}", editingProduct);
        if (response.IsSuccessStatusCode)
        {
            await JS.InvokeVoidAsync("alert", "Product updated successfully!");
            editingProduct = null;
            await LoadProducts();
        }
        else
        {
            await JS.InvokeVoidAsync("alert", "Update failed!");
        }
    }

    public class ProductDto
    {
        public Guid ProductID { get; set; }
        public string? Description { get; set; }
        public decimal Price { get; set; }
        public string? Category { get; set; }
        public string? ImageUrl { get; set; }
        public bool InStock { get; set; }
    }

    public class ProductUpdateDto
    {
        public string Name { get; set; } = string.Empty;
        public string? Description { get; set; }
        public decimal Price { get; set; }
        public string? Category { get; set; }
        public bool InStock { get; set; }
    }


}


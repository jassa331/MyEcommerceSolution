@page "/update-product/{ProductID:guid}"
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JS

<div class="update-product-container">
    <h3>Update Product</h3>

    @if (product == null)
    {
        <p class="loading">Loading...</p>
    }
    else
    {
        <EditForm Model="@product" OnValidSubmit="HandleValidSubmit" class="product-form">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group">
                <label>Name</label>
                <InputText class="form-control" @bind-Value="product.Name" placeholder="Enter product name" />
            </div>

            <div class="form-group">
                <label>Description</label>
                <InputTextArea class="form-control" @bind-Value="product.Description" placeholder="Enter description" />
            </div>

            <div class="form-group">
                <label>Price</label>
                <InputNumber class="form-control" @bind-Value="product.Price" placeholder="Enter price" />
            </div>

            <div class="form-group">
                <label>Category</label>
                <InputText class="form-control" @bind-Value="product.Category" placeholder="Enter category" />
            </div>

            <div class="form-group form-check">
                <InputCheckbox class="form-check-input" @bind-Value="product.InStock" />
                <label class="form-check-label">In Stock</label>
            </div>

            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">Update</button>
                <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
            </div>
        </EditForm>
    }
</div>
<style>
/* ===== Premium Card Container ===== */
.update-product-container {
    max-width: 700px;
    margin: 3rem auto;
    padding: 2.5rem 2.5rem;
    border-radius: 18px;
    background: linear-gradient(145deg, #ffffff, #f1f3f6);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
    font-family: "Poppins", "Segoe UI", sans-serif;
    position: relative;
    overflow: hidden;
}

/* Soft top accent bar */
.update-product-container::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    height: 6px;
    width: 100%;
    background: linear-gradient(90deg, #27ae60, #2ecc71);
}

/* ===== Title Styling ===== */
.update-product-container h3 {
    text-align: center;
    margin-bottom: 2.5rem;
    font-size: 2rem;
    font-weight: 700;
    color: #2c3e50;
    letter-spacing: 0.5px;
}

/* ===== Loading Text ===== */
.loading {
    text-align: center;
    color: #7f8c8d;
    font-size: 1.2rem;
}

/* ===== Form Layout ===== */
.product-form {
    display: flex;
    flex-direction: column;
    gap: 1.4rem;
}

/* ===== Labels ===== */
.product-form label {
    font-weight: 600;
    color: #34495e;
    font-size: 0.95rem;
    margin-bottom: 0.3rem;
    display: inline-block;
}

/* ===== Inputs & Textarea ===== */
.product-form .form-control {
    width: 100%;
    padding: 0.85rem 1rem;
    border-radius: 12px;
    border: 1.5px solid #dcdde1;
    font-size: 1rem;
    background-color: #ffffff;
    transition: all 0.25s ease;
}

/* Focus effect */
.product-form .form-control:focus {
    border-color: #27ae60;
    box-shadow: 0 0 0 4px rgba(39, 174, 96, 0.12);
    outline: none;
}

/* Textarea */
textarea.form-control {
    min-height: 120px;
    resize: vertical;
}

/* ===== Checkbox Section ===== */
.product-form .form-check {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.4rem 0;
}

.product-form .form-check-input {
    width: 18px;
    height: 18px;
    accent-color: #27ae60;
    cursor: pointer;
}

.product-form .form-check-label {
    font-weight: 500;
    color: #555;
}

/* ===== Buttons Area ===== */
.form-buttons {
    display: flex;
    justify-content: flex-end;
    gap: 1rem;
    margin-top: 1rem;
}

/* Base Button */
button {
    padding: 0.7rem 2rem;
    border-radius: 14px;
    border: none;
    font-weight: 600;
    font-size: 0.95rem;
    letter-spacing: 0.3px;
    cursor: pointer;
    transition: all 0.25s ease;
    box-shadow: 0 8px 20px rgba(0,0,0,0.08);
}

/* Primary Button (Update) */
button.btn-primary {
    background: linear-gradient(135deg, #27ae60, #2ecc71);
    color: #ffffff;
}

button.btn-primary:hover {
    transform: translateY(-2px) scale(1.01);
    box-shadow: 0 12px 26px rgba(39,174,96,0.3);
}

/* Secondary Button (Cancel) */
button.btn-secondary {
    background-color: #ecf0f1;
    color: #2c3e50;
}

button.btn-secondary:hover {
    background-color: #dfe6e9;
    transform: translateY(-2px) scale(1.01);
}

/* ===== Responsive ===== */
</style>


@code {
    [Parameter]
    public Guid ProductId { get; set; }

    private ProductUpdateDto? product;

    protected override async Task OnInitializedAsync()
    {
        var token = await JS.InvokeAsync<string>("localStorage.getItem", "authToken");
        Http.DefaultRequestHeaders.Authorization =
            new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

        try
        {
            product = await Http.GetFromJsonAsync<ProductUpdateDto>($"https://localhost:7255/api/Product/get/{ProductId}");
        }
        catch
        {
            await JS.InvokeVoidAsync("alert", "Failed to load product.");
            Navigation.NavigateTo("/counter");
        }
    }

    private async Task HandleValidSubmit()
    {
        if (product == null) return;

        try
        {
            var token = await JS.InvokeAsync<string>("localStorage.getItem", "authToken");
            Http.DefaultRequestHeaders.Authorization =
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

            var response = await Http.PutAsJsonAsync($"https://localhost:7255/api/Product/update-PRODUCTS/{ProductId}", product);

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "✅ Product updated successfully!");
                Navigation.NavigateTo("/counter");
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                await JS.InvokeVoidAsync("alert", $"❌ Update failed: {error}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"❌ Exception: {ex.Message}");
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/counter");
    }

    public class ProductUpdateDto
    {
        public string Name { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public decimal Price { get; set; }
        public string Category { get; set; } = string.Empty;
        public bool InStock { get; set; }
    }
}
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            height: 6px;
            width: 100%;
            background: linear-gradient(90deg, #27ae60, #2ecc71);
            border-top-left-radius: 20px;
            border-top-right-radius: 20px;
        }

        /* Title */
        .update-product-container h3 {
            text-align: center;
            margin-bottom: 2rem;
            font-size: 2.2rem;
            font-weight: 700;
            color: #2c3e50;
            letter-spacing: 0.5px;
        }

    /* Loading text */
    .loading {
        text-align: center;
        color: #7f8c8d;
        font-size: 1.2rem;
        font-style: italic;
    }

    /* Form Layout */
    .product-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

        /* Labels */
        .product-form label {
            font-weight: 600;
            color: #34495e;
            font-size: 0.95rem;
            margin-bottom: 0.3rem;
        }

        /* Inputs */
        .product-form .form-control {
            width: 100%;
            padding: 0.85rem 1rem;

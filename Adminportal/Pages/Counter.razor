@page "/counter"
@inject IJSRuntime JS
@inject HttpClient Http

<Sidebar />

<div class="page-wrapper">

    <div class="page-header">
        <h2>📦 My Uploaded Products</h2>
        <p class="subtitle">Manage your uploaded items with ease</p>
    </div>

    @if (isLoading)
    {
        <div class="loader-box">
            <div class="loader"></div>
            <p>Loading products...</p>
        </div>
    }
    else if (products == null || products.Count == 0)
    {
        <div class="empty-state">
            <p>🚫 No products found</p>
        </div>
    }
    else
    {
        <div class="glass-card">
            <div class="table-container">
                <table class="modern-table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var p in products)
                        {
                            <tr>
                                <td>
                                    <img src="@p.ImageUrl" class="prod-img" />
                                </td>
                                <td class="name-column">@p.Name</td>



                                <td class="price">₹@p.Price</td>
                                <td>
                                    <span class="category-badge">@p.Category</span>
                                </td>
                                <td class="action-cell">
                                    <NavLink class="btn-edit" href="@($"/update-product/{p.ProductID}")">
                                        __✏️ Edit
                                    </NavLink>
                                    <button class="btn-edit"
                                            @onclick="() => DeleteProduct(p.ProductID)">
                                        🗑 Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    }

</div>

@if (editingProduct != null)
{
    <div class="modal-backdrop">
        <div class="modal">
            <h3>Edit Product</h3>

            <label>Description</label>
            <input type="text" @bind="editingProduct.Description" />

            <label>Price</label>
            <input type="number" step="0.01" @bind="editingProduct.Price" />

            <label>Category</label>
            <input type="text" @bind="editingProduct.Category" />

            <label class="check-row">
                <input type="checkbox" @bind="editingProduct.InStock" />
                In Stock
            </label>

            <div class="modal-actions">
                <button class="btn-edit" @onclick="SaveProduct">Save</button>
                <button class="btn-danger" @onclick="CancelEdit">Cancel</button>
            </div>
        </div>
    </div>
}


@page "/register"
@using System.Net.Http.Json
@using System.Text.Json.Serialization
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JS

<div class="login-container">
    <div class="login-box">
        <div class="header-container">
            <img src="images/logo.png" alt="Logo" class="logo" />
            <h1>Register Account</h1>
        </div>

        <input type="text" placeholder="Email" @bind="registerModel.Email" required />
        <input type="password" placeholder="Password" @bind="registerModel.Password" required />
        <input type="password" placeholder="Confirm Password" @bind="registerModel.ConfirmPassword" required />

       @*  <label style="display:flex; align-items:center; gap:10px; margin-bottom:15px;">
            <input type="checkbox" @bind="registerModel.IsAdmin" />
            Register as Admin
        </label> *@
       
        <button @onclick="RegisterUser">Register</button>
       @*  <button @onclick="RegisterUser" disabled="@string.IsNullOrWhiteSpace(registerModel.Email) || string.IsNullOrWhiteSpace(registerModel.Password) || string.IsNullOrWhiteSpace(registerModel.ConfirmPassword)">
            Register
        </button> *@

        @if (!string.IsNullOrEmpty(message))
        {
            <p class="error-message">@message</p>
        }

        <p style="margin-top:15px; font-size:14px;">
            Already have an account? <a href="/">Login here</a>
        </p>
    </div>
</div>

<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background: linear-gradient(135deg, #e0f7fa, #888c8c);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-box {
        background: #ffffff;
        padding: 50px 40px;
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        width: 360px;
        text-align: center;
        transition: transform 0.3s ease;
    }

        .login-box:hover {
            transform: translateY(-5px);
        }

    .header-container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 15px;
        margin-bottom: 25px;
    }

    .logo {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid black;
        padding: 3px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    h1 {
        color: #333;
        font-size: 22px;
        margin: 0;
    }

    input, button {
        width: 100%;
        padding: 12px 15px;
        border-radius: 12px;
        font-size: 15px;
        box-sizing: border-box;
    }

    input {
        border: 1px solid #ccc;
        outline: none;
        margin-bottom: 20px;
        transition: all 0.3s ease;
    }

    button {
        background: #000;
        color: #fff;
        border: none;
        cursor: pointer;
        font-weight: bold;
        font-size: 16px;
        transition: background 0.3s ease, transform 0.2s ease;
    }

        button:hover {
            background: #333;
            transform: translateY(-2px);
        }

    .error-message {
        color: #e53935;
        margin-top: 15px;
        font-size: 14px;
    }

    a {
        color: #00796b;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

@code {
    private RegisterModel registerModel = new();
    private string message = "";

    private async Task RegisterUser()
    {
        message = "";

        if (registerModel.Password != registerModel.ConfirmPassword)
        {
            message = "Passwords do not match!";
            return;
        }

        try
        {
            var response = await Http.PostAsJsonAsync("https://localhost:7124/api/Account/register", registerModel);

            if (response.IsSuccessStatusCode)
            {
                message = "✅ Registered successfully! Redirecting to login...";
                await Task.Delay(1500); // small delay to show success message
                Navigation.NavigateTo("/");
            }
            else
            {
                var err = await response.Content.ReadAsStringAsync();
                message = $"❌ Registration failed: {err}";
            }
        }
        catch (Exception ex)
        {
            message = $"Error: {ex.Message}";
        }
    }

    public class RegisterModel
    {
        [JsonPropertyName("email")]
        public string Email { get; set; }

        [JsonPropertyName("password")]
        public string Password { get; set; }

        [JsonPropertyName("confirmPassword")]
        public string ConfirmPassword { get; set; }

        [JsonPropertyName("isAdmin")]
        public bool IsAdmin { get; set; } = false;
    }

}
